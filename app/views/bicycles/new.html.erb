<h1>Create a Bicycle</h1>

<% if @bicycle.errors.any? %>
<h2>Opps, the following errors prevented the bicycle from getting created</h2>
<ul>
  <% @bicycle.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<%end%>

<%= form_for @bicycle do |f| %>
  <p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %> <br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %> <br/>
    <%= f.number_field :price, :step => "0.01" %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>