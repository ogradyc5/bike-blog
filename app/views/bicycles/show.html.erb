<h2 align="center"><strong>Title: <%= @bicycle.title %></strong></h2>
<div class="well col-xs-8 col-xs-offset-2">
   <% if @bicycle.user %>
   <ul class="listing">
    <div class="row center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li>
        <li><%= link_to(gravatar_for(@bicycle.user), user_path(@bicycle.user)) if @bicycle.user %></li>
        <li class="bicycle-title">
          <%=link_to(@bicycle.user.username, user_path(@bicycle.user)) if @bicycle.user %>
        </li>
        <li><small><%= pluralize(@bicycle.user.bicycles.count, "bicycle") if @bicycle.user.bicycles %></small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <h4 class="center description", id="description">
    <strong>Description:</strong>
  </h4>
  <hr>
    <%= simple_format(@bicycle.description) %>
</div>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 h4 class="center price", id="price">
    <strong>Price:</strong>
  </h4>
  <hr>
    <%= @bicycle.price %>
  <% if @bicycle.categories.any? %>
    <p>Categories: <%= render @bicycle.categories %></p>
  <% end %>
  <div class="article-actions", align="center">
    <% if logged_in? && (current_user == @bicycle.user || current_user.admin?) %>
      <hr>
        <%= link_to "Edit this bicycle", edit_bicycle_path(@bicycle), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this bicycle", bicycle_path(@bicycle), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"}, class: "btn btn-xs btn-danger" %> 
    <% end %>
      <hr>
  <%= link_to 'View all Bikes', bicycles_path, class: "btn btn-xs btn-success" %>
<!--%= link_to 'Home', root_path %-->
  </div>
  </div>
</div>